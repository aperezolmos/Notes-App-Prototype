<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/moradoClaro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:id="@+id/cuadriculaTitulo"
            android:text="Título nota"
            android:singleLine="true"
            android:textColor="@color/negroTexto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/cuadriculaTexto"
            android:text="@string/loremIpsumCorto"
            android:textSize="14sp"
            android:textColor="@color/negroTexto"
            android:layout_below="@+id/cuadriculaTitulo"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/cuadriculaTiempo"
            android:text="hace X días"
            android:textStyle="italic"
            android:gravity="end"
            android:textColor="@color/morado"
            android:textSize="11sp"
            android:layout_below="@id/cuadriculaTexto"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp" />

        <ImageView
            android:id="@+id/fijadoONo_cuadricula"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="15dp"
            android:contentDescription="Nota fijada"
            android:src="@drawable/baseline_push_pin_24"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>