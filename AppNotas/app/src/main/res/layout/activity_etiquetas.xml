                android:layout_marginStart="10dp"
                android:text="ðŸ“º   Series"
                android:textColor="@color/negroTexto"
                android:textSize="20sp" />

            <Button
                android:id="@+id/etiquetas_boton_agregar"
                android:paddingHorizontal="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/boton_etiqueta"
                android:drawableLeft="@drawable/baseline_add_24"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text=" AÃ±adir etiqueta" />

        </LinearLayout>

    </FrameLayout>

    <!-- Capa negra entre menÃº izquierdo y contenido. -->
