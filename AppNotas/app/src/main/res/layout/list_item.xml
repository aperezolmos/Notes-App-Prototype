<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/notaTitulo"
            android:text="Título nota"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/negroTexto"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/notaTexto"
            android:text="Descripción de la nota"
            android:textSize="14sp"
            android:textColor="@color/negroTexto"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="7dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/notaTiempo"
            android:text="hace X días"
            android:textStyle="italic"
            android:gravity="end"
            android:textColor="@color/grisHoraNota"
            android:textSize="11sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp" />

        <ImageView
            android:id="@+id/fijadoONo_lista"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="332dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Nota fijada"
            android:src="@drawable/baseline_push_pin_24"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>