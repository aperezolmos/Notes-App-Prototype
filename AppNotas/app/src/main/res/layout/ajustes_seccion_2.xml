<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ajustes_seccion"
    android:layout_margin="16dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Estilo de notas nuevas"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Tamaño de la fuente"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="26dp"
            android:text="Medio"
            android:textColor="@color/grisAlertDialog"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Guardar notas automáticamente"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Método de desbloqueo de notas"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Privacidad"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Acerca de Notiz"
            android:textColor="@color/negroTexto"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="26dp"
            android:text="Notiz v1.0"
            android:textColor="@color/grisAlertDialog"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="68dp"
        android:layout_height="80dp"
        android:src="@drawable/icono_notas"
        android:contentDescription="Icono notas"
        android:layout_marginTop="210dp"
        android:layout_marginStart="290dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_ajustes_2"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="105dp"/>

</RelativeLayout>