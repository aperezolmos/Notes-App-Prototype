<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compartidaslayout"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/compartidasTitulo"
            android:text="Titulo nota"
            android:textColor="@color/negroTexto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/compartidasTexto"
            android:text="Descripción de la nota"
            android:textSize="14sp"
            android:textColor="@color/negroTexto"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/compartidasTiempo"
            android:text="hace X días"
            android:textStyle="italic"
            android:gravity="end"
            android:textColor="@color/grisHoraNota"
            android:textSize="11sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="210dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compartidasDetalles"
            android:visibility="gone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fotos_perfil"
                android:layout_marginTop="72dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_calendar_month_24"
                app:tint="@color/moradoClaro"
                android:layout_marginTop="130dp"
                android:layout_marginStart="26dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Quién tiene acceso"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/negroTexto"
                android:layout_marginTop="75dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:id="@+id/compartidasUsuarios"
                android:text="Usuario 1, Usuario 2"
                android:textSize="14sp"
                android:textColor="@color/negroTexto"
                android:layout_marginTop="98dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Fecha de creación"
                android:textColor="@color/negroTexto"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="128dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:id="@+id/compartidasCreacion"
                android:text="27 abril 2002"
                android:textColor="@color/negroTexto"
                android:textSize="14sp"
                android:layout_marginTop="153dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>